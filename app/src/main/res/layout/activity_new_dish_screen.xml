<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs175.whatsfordinner.NewDishScreen">

    <RelativeLayout
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <EditText
            android:id="@+id/recipe_name"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border"
            android:hint="Enter Recipe Name"
            android:gravity="center"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/default_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/recipe_name"
            app:srcCompat="@drawable/defaut_image"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:drawableTop="@drawable/food_image"
            android:gravity="center"
            android:layout_above="@+id/frameLayout"
            android:layout_alignRight="@+id/recipe_name"
            android:layout_alignEnd="@+id/recipe_name"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/default_image"
            android:padding="50dp"
            android:background="@drawable/border"
            android:layout_margin="20dp"
            android:theme="@android:style/Widget.GridView"
            >

            <TextView
                android:id="@+id/textView"
                style="?android:attr/listSeparatorTextViewStyle"
                android:text="Ingredients"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout> -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/default_image"
            android:layout_margin="20dp"
            android:id="@+id/frameLayout"
            tools:layout_editor_absoluteY="20dp"
            tools:layout_editor_absoluteX="8dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="@drawable/border"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Ingredients:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/item1"
                    android:hint="item1"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/title"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/border"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/item2"
                    android:hint="item1"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/item1"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/border"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/item3"
                    android:hint="item1"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/item2"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/border"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/item4"
                    android:hint="item1"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/item3"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/border"/>

            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/direction_frame"
            android:layout_below="@id/frameLayout"
            android:layout_margin="20dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="28dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="181dp"
                android:background="@drawable/border"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Direction:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/item7"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/Direction"

                    android:maxLength="250"/>
            </RelativeLayout>
        </FrameLayout>



    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
